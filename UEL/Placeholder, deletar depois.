#include <iostream>
#include <iomanip>
#include <cmath>
#include <cstdlib>

using namespace std;

char texto[1000];
char palavra[40];

int main(){
    int k, ocurrences = 0;
    cout << "Insira o texto: ";
    cin.getline(texto, 1000);
    cout << "Insira a palavra: ";
    cin.getline(palavra, 40);
    for(int i = 0; i < (sizeof(texto)/sizeof(texto[0])); i++){
        if(texto[i] == palavra[i]){
            k = 1;
            do{
                if(texto[i + k] == palavra[i + k]){
                    k++;
                } else { break; }
                if(k == sizeof(palavra)/sizeof(palavra[0])) ocurrences++;
            }while(k < sizeof(palavra)/sizeof(palavra[0]));
        }
    }
    // Pensar em strlen ou algo do tipo
    cout << ocurrences << " ocorrencias da palavra " << palavra << endl;
    return 0;
}
